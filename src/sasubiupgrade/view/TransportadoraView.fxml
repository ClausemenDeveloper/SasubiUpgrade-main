<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sasubiupgrade.controller.TransportadoraController">
    
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-text-fill: #002855; -fx-font-size: 16px; -fx-font-weight: bold;" text="Entregas da Transportadora" />

    <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Lista de Entregas" />
    <ListView fx:id="listaEntregas" prefHeight="150">
        <style>
            -fx-border-color: #002855;
        </style>
    </ListView>

    <Button fx:id="receberEntregaButton" onAction="#marcarEntregaRecebida" style="-fx-background-color: #002855; -fx-text-fill: white; -fx-font-weight: bold;" text="Marcar como Recebida" />
</VBox>